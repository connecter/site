<div class="section-contact collapsed">
  <div class="contact-wrap">
    <div class="container">
      <a href="javascript:;" class="close-contact contact-form-toggle"><span class="sr-only">Close contact form</span></a>
      <div class="row">
        <div class="col-xs-12">
          <h2>Contact us</h2>
        </div>
      </div>
      <div class="form-container">
        <form action="/api/contact-us" method="post" id="contact-form">
          <div class="row">
            <div class="col-sm-6">
              <div class="row">
                <div class="col-sm-12">
                  <label for="name">Name</label>
                  <input type="text" name="name" required="required" class="form-control contact-form-name">
                </div>
                <div class="col-sm-12">
                  <label for="email">Email</label>
                  <input type="email" name="email" required="required" class="form-control">
                </div>
        
                <div class="col-sm-12">
                  <label for="city">City/Country</label>
                  <input type="city" name="location" required="required" class="form-control">
                </div>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="row">
                <div class="col-xs-12">
                  <label for="message">Message</label>
                  <textarea name="message" rows="6" class="form-control" required="required"></textarea>
                  <div class="centered-xs right-aligned-sm">
                    <button class="btn btn-primary btn-send ladda-button" data-style="expand-right" type="submit"><span class="ladda-label">Submit</span></button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="success hide">
          <div class="row">
            <div class="col-xs-12">
              <p class="lead">Thank you for your message. We will get back to you soon </p> 
            </div>
          </div>
      </div>
      <div class="failure hide">
          <div class="row">
            <div class="col-xs-12">
              <p class="lead">Something went wrong. Please try again later</p> 
            </div>
          </div>
      </div>
    </div>
  </div>
